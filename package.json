{
  "name": "root",
  "author": "Gheric Speiginer",
  "license": "MIT",
  "private": true,
  "scripts": {
    "install": "lerna exec -- rm -rf ./node_modules && lerna exec -- npm i",
    "build": "npm run clean && npm run bundle",
    "clean-cache": "rm -rf .parcel-cache",
    "clean-dist": "lerna exec -- rm -rf ./dist && rm -rf docs",
    "clean": "npm run clean-cache && npm run clean-dist",
    "prepare-docs": "PUBLIC_URL=/ethereal/ && npm run clean-dist && mkdir docs && ln -sf ../packages/docs/static ./docs/static",
    "bundle": "npm run prepare-docs && parcel build packages/docs --dist-dir docs --public-url $PUBLIC_URL && parcel build packages/ethereal",
    "start": "npm run prepare-docs && parcel serve packages/docs --dist-dir docs --host 0.0.0.0 ",
    "start-web-layer": "parcel packages/web-layer/src/example/index.html --host 0.0.0.0",
    "release": "lerna publish",
    "test": "ava"
  },
  "devDependencies": {
    "@ava/babel": "^1.0.1",
    "@babel/core": "^7.9.6",
    "@babel/plugin-proposal-class-properties": "^7.8.3",
    "@babel/plugin-proposal-decorators": "^7.8.3",
    "@babel/plugin-proposal-export-default-from": "^7.8.3",
    "@babel/plugin-proposal-nullish-coalescing-operator": "^7.8.3",
    "@babel/plugin-proposal-optional-chaining": "^7.9.0",
    "@babel/plugin-proposal-private-methods": "^7.8.3",
    "@babel/plugin-transform-typescript": "^7.9.6",
    "@babel/register": "^7.9.0",
    "@parcel/transformer-typescript-tsc": "^2.0.0-alpha.3",
    "@parcel/validator-typescript": "^2.0.0-alpha.3",
    "ava": "^3.8.1",
    "lerna": "^3.19.0",
    "parcel": "^2.0.0-nightly.284",
    "rimraf": "~3.0.0",
    "three": "^0.113.2",
    "typescript": "^3.9.3"
  },
  "ava": {
    "extensions": [
      "ts"
    ],
    "require": [
      "./babel-register"
    ],
    "babel": true
  },
  "browserslist": [
    "last 1 chrome versions",
    "last 1 firefox versions"
  ]
}
