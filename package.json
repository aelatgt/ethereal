{
  "name": "@etherealjs/root",
  "author": "Gheric Speiginer",
  "ava": {
    "require": [
      "esm"
    ]
  },
  "dependencies": {
    "@etherealjs/core": "file:packages/core",
    "@etherealjs/web-layer": "file:packages/web-layer",
    "ethereal": "file:packages/ethereal",
    "three": "^0.122.0",
    "three-mesh-bvh": "^0.2.0",
    "vue": "^3.0.7"
  },
  "devDependencies": {
    "@types/node": "^14.14.33",
    "@vitejs/plugin-vue": "^1.1.5",
    "ava": "^3.15.0",
    "link-into": "^3.0.1",
    "rimraf": "^3.0.0",
    "syncpack": "^5.6.7",
    "typescript": "^3.9.3",
    "ultra-runner": "^3.10.5",
    "vite": "^2.2.3"
  },
  "engines": {
    "npm": ">=7.6"
  },
  "license": "MIT",
  "private": true,
  "scripts": {
    "build": "npx ultra ultrabuild",
    "build:apps": "vite build && link-into docs/ 'apps/**/public'",
    "build:packages": "tsc -p tsconfig.build.json",
    "build:syncpack": "syncpack fix-mismatches && syncpack format && syncpack set-semver-ranges --prod --dev --semver-range '^' && syncpack set-semver-ranges --peer --semver-range '>='",
    "clean": "rimraf apps/**/dist packages/**/dist docs/apps",
    "dev": "vite --https",
    "serve": "vite --https preview",
    "test": "ava",
    "ultrabuild": "npm run build:syncpack && npm run build:packages && npm run build:apps"
  },
  "workspaces": [
    "packages/*",
    "apps/*"
  ]
}
