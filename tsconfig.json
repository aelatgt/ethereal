{
  "include": ["packages"],
  "exclude": ["**/node_modules"],
  "compilerOptions": {
    "pretty": true,
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "node",
    "lib": ["ES2018", "DOM", "dom.iterable"],
    "noEmit": true,
    "noEmitOnError": true,
    "skipLibCheck": true,
    "preserveConstEnums": true,
    "esModuleInterop": true,
    "downlevelIteration": true,
    "experimentalDecorators": true,
    "isolatedModules": true,
    "strict": true,
    "jsx": "preserve",
    "baseUrl": ".",
    "paths": {
      "*": ["node_modules/*"],
    }
  }
}